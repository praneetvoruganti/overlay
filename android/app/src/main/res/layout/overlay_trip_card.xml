<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="32dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/modern_card_background"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="12dp">

        <!-- Destination Header -->
        <TextView
            android:id="@+id/destination_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Market Street, Downtown"
            android:textSize="26sp"
            android:textColor="#1C1C1E"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <!-- Distance & ETA -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_map_pin"
                android:layout_marginEnd="6dp"
                android:tint="#8A8A8E" />
            <TextView
                android:id="@+id/distance_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2 miles"
                android:textSize="16sp"
                android:textColor="#636366"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clock"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="6dp"
                android:tint="#8A8A8E" />
            <TextView
                android:id="@+id/eta_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 mins"
                android:textSize="16sp"
                android:textColor="#636366"/>
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Fare Section -->
        <TextView
            android:id="@+id/total_fare_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₹50"
            android:textSize="48sp"
            android:fontFamily="sans-serif-bold"
            android:textColor="#1C1C1E"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Fare"
            android:textSize="14sp"
            android:textColor="#8A8A8E"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

        <!-- Fare Increment Pills -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/increment_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/modern_pill_button_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:text="+ ₹5"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
            <TextView
                android:id="@+id/increment_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/modern_pill_button_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginStart="12dp"
                android:text="+ ₹10"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
            <TextView
                android:id="@+id/increment_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/modern_pill_button_background"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:layout_marginStart="12dp"
                android:text="+ ₹20"
                android:textColor="#007AFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Action Buttons -->
        <Button
            android:id="@+id/accept_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Accept for ₹50"
            android:background="@drawable/modern_accept_button_background"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-bold"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/ignore_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:text="Decline"
            android:background="@drawable/modern_decline_button_background"
            android:textColor="#8A8A8E"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Hidden fields for compatibility -->
    <TextView android:id="@+id/fare_details_text" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/landmark_text" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/payment_method_text" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/rider_rating_text" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
    <TextView android:id="@+id/passenger_count_text" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone" />
</RelativeLayout>
